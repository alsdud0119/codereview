	public void sub() {
		System.out.println("sub");
		System.out.println(this.getFirstNum() + " + " + this.getSecondNum() + " = " + (this.getFirstNum() - this.getSecondNum()));
	}
	public void mul() {
		System.out.println("mul");
		System.out.println(this.getFirstNum() + " + " + this.getSecondNum() + " = " + (this.getFirstNum() * this.getSecondNum()));
	}
	public void div() {
		System.out.println("div");
		System.out.println(this.getFirstNum() + " + " + this.getSecondNum() + " = " + (this.getFirstNum() / this.getSecondNum()));
	}
	
