package com.java.socket.udp;

import java.io.IOException;
import java.net.DatagramPacket;
import java.net.DatagramSocket;
import java.net.InetAddress;
import java.net.SocketException;

import org.apache.log4j.Logger;

public class EchoServer extends Thread {

	private static final Logger log = Logger.getLogger(EchoServer.class);

	private DatagramSocket socket; // use throughout to send packets.
	private boolean running;
	private byte[] buf = new byte[256];	// to warp our messages.

	EchoServer() throws SocketException {
		PropertyConfigurator.configure(¡°log4j.properties¡±);
		socket = new DatagramSocket(4445);
	}

	public void run() {
		
		running = true;

		try {

			while (running) {
				
				log.debug("running : "  + running + "/n");
				
				DatagramPacket packet = new DatagramPacket(buf, buf.length);

				socket.receive(packet);
				
				
				log.debug("packet1 : "  + packet + "/n");
				
				InetAddress address = packet.getAddress();
				
				log.debug("address : "  + address + "/n");
				
				int port = packet.getPort();
				
				log.debug("port : "  + port + "/n");
				packet = new DatagramPacket(buf, buf.length, address, port);
				
				log.debug("packet2 : "  + packet + "/n");
				
				String received = new String(packet.getData(), 0, packet.getLength());
				
				log.debug("received : "  + received + "/n");

				if (received.equals("end")) {
					running = false;
					continue;
				}

				socket.send(packet);

			}
			
			socket.close();

		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}
